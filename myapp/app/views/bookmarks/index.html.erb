<% if flash[:notice] %>
    <%= flash[:notice] %>
<% end %>

<% @bookmarks.each do |book| %>
  <p>
    <%= link_to book.title, book.url %>
    <%= link_to '削除', bookmark_path(book), data: {turbo_method: :delete} %>
    <%= link_to '表示', bookmark_path(book) %>
    <%= link_to '編集', "/bookmarks/#{book.id}/edit" %>
  </p>
<% end %>
<p><%= link_to '新規追加', bookmarks_new_path %></p>
